pipeline {
    agent any
    stages{
       stage('project setup') {
           steps{
             sh 'npm install'
            }
          }
          stage('Compiles and hot-reloads for development') {
            steps{
              sh 'npm run serve'
              }
            }
            stage('Compiles and minifies for production') {
               steps{
                sh 'npm run build'
               }
             }
             stage('Lints and fixes files') {
               steps{
                sh 'npm run lint'
               }
             }
           }  
             
            
